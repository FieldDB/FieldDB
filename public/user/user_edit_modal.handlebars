<div class="modal-header">
<!--   <a href="#" rel="tooltip" title="Show read only">
      <i class="icons icon-book pull-right"></i></a>    -->
  <h3>User Profile</h3>
</div>
<div class="modal-body">
  <div class="btn-gourp">
  <button class="btn btn-success save-user-profile" value="Save">Save</button>
  <a href="#" rel="tooltip" title="Show read only">
      <i class="icons icon-book pull-right"></i></a>  
  </div>
  <p>
    <dl>
      <dt>Gravatar</dt>
      <dd>
        <img class="gravatar-image gravatar-large" src="{{gravatar}}"/>
      </dd> 
      <dt>Gravatar URL</dt>
      <dd>
        <input class="gravatar" type="email" value="{{gravatar}}"/>
      </dd>
      <dt>Firstname</dt>
      <dd>
        <input class="firstname"  value="{{firstname}}"/>
      </dd>
      <dt>Lastname</dt>
      <dd>
        <input class="lastname"  value="{{lastname}}"/>
      </dd>
      <dt>Email</dt>
      <dd>
        <input class="email" type="email" value="{{email}}"/>
      </dd>
      <dt>Research Interest</dt>
      <dd>
        <textarea class="researchInterest">{{researchInterest}}</textarea>
      </dd>
      <dt>Affiliation</dt>
      <dd>
        <textarea class="affiliation">{{affiliation}}</textarea>
      </dd>
      <dt>Description</dt>
      <dd>
        <textarea class="description">{{description}}</textarea>
      </dd>
      <dt>Corpora</dt>
      <dd>
        <ul class="corpora"></ul>
      </dd>
    </dl>
  </p>
</div>
<div class="modal-footer">
<!--  <button class="btn btn-success pull-right save-user-profile" value="Save">Save</button>
 -->
</div>

