<div class="pull-right">
  <a href="#" class= "locale_Show_Readonly" rel="tooltip">
      <i class="icons icon-book"></i></a>
  <a href="#" class= "locale_Show_in_Dashboard" rel="tooltip" >
      <i class="icons icon-resize-small"></i></a>
</div>
<button class="btn btn-success pull-left save-datalist locale_Save" value="Save"></button>
<br>
<br>
<label class = "locale_Title"></label> <i class="icon-pushpin"></i> 
<small>{{datumCount}}</small>
<textarea class="data-list-title">{{title}}</textarea>
<h4>{{dateCreated}}</h4>
<label class = "locale_Description"></label>
<textarea class="data-list-description locale_Datalist_Description"
>{{description}}</textarea>


<!-- Data list comments -->
<ul class="comments unstyled"></ul>
<div class="alert alert-info">
  <textarea class="comment-new-text"></textarea>
  <button class="btn btn-mini btn-primary add-comment-datalist" value="Add">
    <i class="icon-comment"></i>
    <span class = "locale_Add"></span> 
  </button>
</div>

<!--DataList Menu  -->
<div class="btn-group">
  <a  href="#" class = "locale_Play_Audio_checked btn btn-mini btn-primary" rel="tooltip" >
    <i class=" icon-bullhorn"></i></a>
