<button class="pull-right btn btn-success pull-right save-datum" value="Save">   
 <span class="locale_Save"></span></button>
 <br/>
 <br/>
 <span class= "pull-right">  {{timestamp}}</span>
 
 
<!-- list for the fields -->
<ul class="datum_fields_ul unstyled"></ul>
<a  href="#" class= "locale_See_Fields" rel="tooltip" >
  <i class="icon-list-alt pull-right"> </i></a>
<!-- drop down for the states -->
<div class="datum_state">
    <select class="datum_state_select">
      {{#each datumStates}}
          <option value="{{state}}" {{selected}}>{{state}}</option>
      {{/each}}
    </select>
</div>
<!-- list for the tags -->
<ul class="datum_tags_ul unstyled"></ul>
<!-- way to add new tags -->
<span class="like-form-inline">
  <input class="add_tag locale_Add_Tags" type="text"></input>
  <a href="#" rel="tooltip">
    <button class="btn btn-primary add_datum_tag" value="Add">
    <i class = "icon-tag icon-white"></i>
    <span class = "locale_Add"></span>
    </button></a>
</span>

<!-- Buttons for various actions -->
<div>
  <div class="icons btn-group">
    <a href="#" class = "locale_Insert_New_Datum" rel="tooltip"><button class="btn btn-primary">
      <i class="icon-white icon-plus"></i></button></a>
    <a href="#" class = "locale_LaTeX" rel="tooltip">
      <button class="btn btn-primary LaTeX">LaTeX</button></a>
    <a href="#" class = "locale_CSV" rel="tooltip">
      <button class="btn btn-primary CSV">CSV/Excel</button></a>
    <a  href="#" class = "locale_Copy" rel="tooltip" >
      <i class="icons icon-paste"></i></a>
    <a  href="#" class = "locale_Duplicate" rel="tooltip">
      <i class="icons icon-copy"></i></a>  
    <a  href="#" class= "locale_Encrypt" rel="tooltip">
      <i class="icons {{#if confidential}}icon-lock{{else}}icon-unlock{{/if}}"></i></a> 
    <a href="#" class = "locale_Decrypt_checked" rel="tooltip">
      <i class="icons {{#if decryptedMode}}icon-eye-close{{else}}icon-eye-open{{/if}}"></i>
    </a>
  </div>
</div>
<br>
<div class="audio_video"></div>

<!--Comments Section  -->
<div class="comments-section">
	<ul class="comments unstyled"></ul>
	<div class="alert alert-info">
		<i class="icons icon-comment"></i>
		<textarea class="comment-new-text"></textarea>
	</div>
	<button class="btn btn-primary add-comment-edit locale_Add" value="Add"></button>
</div>


