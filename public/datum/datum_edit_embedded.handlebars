<!-- list for the fields -->
<ul class="datum_fields_ul unstyled"></ul>
<a  href="#" class="button-help" rel="tooltip" title="See more/less fields" tabindex="-1">
  <i class="icon-list-alt pull-right"> </i></a>
<!-- drop down for the states -->
<div class="datum_state">
    <select class="datum_state_select">
      {{#each datumStates}}
          <option value="{{state}}" {{selected}}>{{state}}</option>
      {{/each}}
    </select>
</div>
<!-- list for the tags -->
<ul class="datum_tags_ul unstyled"></ul>
<!-- way to add new tags -->
<span class="like-form-inline">
  <input class="add_tag" placeholder="New Tag..." type="text"></input>
  <button class="btn btn-primary add_datum_tag" value="Add">
    <i class = "icon-tag icon-white"></i>
    Add
  </button>
</span>

<!-- Buttons for various actions -->
<div>
  <div class="icons btn-group">
    <button class="btn btn-primary">
      <i class="icon-white icon-plus"></i>
    </button>
    <button class="btn btn-primary LaTeX">LaTeX</button>
    <button class="btn btn-primary CSV">CSV/Excel</button>
    <a  href="#" class="button-help" rel="tooltip" title="Copy to clipboard" tabindex="-1">
       <i class="icons icon-paste"></i></a>
    <a  href="#" class="button-help" rel="tooltip" title="Duplicate" tabindex="-1">
      <i class="icons icon-copy"></i></a>
    <a  href="#" class="button-help" rel="tooltip" title="Encrypt/Decrypt" tabindex="-1">
      <i class="icons icon-lock"></i></a>       
<!--     <a id="clipboard"><i class="icons icon-paste"></i></a>
    <a id="duplicate"><i class="icons icon-copy"></i></a>
    <a id="encrypt"><i class="icons icon-lock"></i></a>
 -->    
  </div>
</div>
<div class="audio_video"></div>

<!--Comments Section  -->
<div class="comments-section">
<h3>Comments</h3>
<ul class="comments unstyled"></ul>

<div class="alert alert-info">
  <span> new comment: </span>
  <i class="icons icon-comment"></i>
  <div class= "pull-right">  </div>
  <textarea class="comment-new-text"></textarea>
</div>

<button class="btn btn-primary add-comment-datum-edit" value="Add">Add
  Comment</button>
</div>

