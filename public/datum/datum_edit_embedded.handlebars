<!-- list for the fields -->
<ul class="datum_fields_ul unstyled"></ul>
<i class="icon-list-alt pull-right"> </i>
<!-- drop down for the states -->
<div class="datum_state">
    <select class="datum_state_select">
      {{#each datumStates}}
          <option value="{{state}}" {{selected}}>{{state}}</option>
      {{/each}}
    </select>
</div>
<!-- list for the tags -->
<ul class="datum_tags_ul unstyled"></ul>
<!-- way to add new tags -->
<span class="like-form-inline">
  <input class="add_tag" placeholder="New Tag..." type="text"></input>
  <button class="btn btn-primary add_datum_tag" value="Add">
    <i class = "icon-tag icon-white"></i>
    Add
  </button>
</span>

<!-- Buttons for various actions -->
<div>
  <div class="icons btn-group">
    <button class="btn btn-primary">
      <i class="icon-white icon-plus"></i>
    </button>
    <button class="btn btn-primary LaTeX">LaTeX</button>
    <button class="btn btn-primary CSV">CSV/Excel</button>
    <a id="clipboard">
      <i class="icons icon-paste"></i>
    </a>
    <a id="duplicate">
      <i class="icons icon-copy"></i>
    </a>
     <a>
      <i class="icons {{#if confidential}}icon-lock{{else}}icon-unlock{{/if}}"></i>
    </a>
    <a>
      <i class="icons {{#if decryptedMode}}icon-eye-close{{else}}icon-eye-open{{/if}}"></i>
    </a>
    
  </div>
</div>
<div class="audio_video"></div>

<!--Comments Section  -->
<div class="comments-section">

<ul class="comments unstyled"></ul>

<div class="alert alert-info">
  <span> new comment: </span>
  <i class="icons icon-comment"></i>
  <div class= "pull-right">  </div>
  <textarea class="comment-new-text"></textarea>
</div>

<button class="btn btn-primary add-comment-datum-edit" value="Add">Add
  Comment</button>
</div>

