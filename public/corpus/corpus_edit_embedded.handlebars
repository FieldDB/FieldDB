<div class="pull-right">
  <a href="#" rel="tooltip" title="Show read only">
    <i class="icons icon-book"></i></a>
    <spacer></spacer>
  <a href="#" rel="tooltip" title="Show full screen">    
    <i class="icons icon-resize-full resize-full"></i></a>
</div>

<div class="btn-toolbar ">

	<!-- /btn-group -->
	<div class="btn-group">
		<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
			New <span class="caret"></span>
		</button>
		<ul class="dropdown-menu">
			<li class="new-datum-edit"><a href="#">New Datum</a></li>
			<li class="new-data-list"><a href="#">New Data List</a></li>
			<li class="new-session"><a href="#">New Session</a></li>
			<li class="new-corpus"><a href="#">New Corpus</a></li>
		</ul>
	</div>
	<!-- /btn-group -->
	<div class="btn-group">
		<button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
			Data <span class="caret"></span>
		</button>
		<ul class="dropdown-menu">
			<li><a href="#import">Import Data</a></li>
			<li><a href="#corpus/{{titleAsUrl}}/export">Export Data</a></li>
		</ul>
	</div>
	<!-- /btn-group -->

  <!-- Toggle to readonly -->
  <div class="btn-group">
    <button class="btn btn-success save-corpus">
      Save</button>
  </div>
</div>


<label>Title:</label>
<input class="corpus-title-input" value="{{title}}" type="text"/>
<label>Description:</label>
<textarea class="corpus-description-input">{{description}}</textarea>

<div class="accordion" id="accordion-edit-embedded">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseSessionsEE">
        <h4>Sessions associated with this corpus</h4>
         </a>
    </div>
    <div class="accordion-body collapse" id="collapseSessionsEE">
      <div class="accordion-inner">
        <ul class = "sessions-updating-collection unstyled">
                <!-- Updating Sessions Collection -->
        </ul>
      </div>
    </div>
  </div>
  
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseDatalistsEE">
        <h4>Datalists associated with this corpus</h4>
        </a>
    </div>
    <div class="accordion-body collapse" id="collapseDatalistsEE" >
      <div class="accordion-inner">
         <ul class = "datalists-updating-collection unstyled">
                <!-- Updating DataLists Collection -->
        </ul>
      </div>
    </div>
  </div>
  
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="accordion-edit-embedded" href="#collapsePermissionsEE">
        <h4>Permissions associated with this corpus</h4>
        </a>
    </div>
    <div class="accordion-body collapse" id="collapsePermissionsEE">
      <div class="accordion-inner">
        <ul class = "permissions-updating-collection unstyled">
                      <!-- Updating Permissions Collection -->
        </ul>
      </div>
    </div>
  </div>

  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseDatumFieldSettingsEE">
        <h4>Datum field settings</h4>
        </a>
    </div>
    <div class="accordion-body collapse" id="collapseDatumFieldSettingsEE">
      <div class="accordion-inner">
        <ul class="datum_field_settings unstyled"></ul>
        <div class="breadcrumb">
          <input type="text" class="span3 choose_add_field" data-provide="typeahead" data-items="4" 
        data-source="[&quot;Phonemic Transcription&quot;,&quot;Phonetic Transcription&quot;,&quot;Semantic Denotation&quot;,&quot;Semantic Context&quot;,&quot;Spanish&quot;,&quot;Notes&quot;]">
        
        <!-- <select class="choose_add_field">
            <option value="judgement">Gramaticality/Acceptability Judgement</option>
            <option value="utterence">Orthography/Utterance</option>
            <option value="morphemes">Morphemes</option>
            <option value="gloss">Gloss</option>
            <option value="translation">Translation</option>
            <option value="transcription">IPA Transcription</option>
            <option value="context">Context</option>
            <option value="semantic_denotation">Semantic Denotation</option>
            <option value="Create New">Create New</option>
        </select> -->
         Encrypt if confidential: <input type="checkbox" class="add_encrypted"{{encrypted}}></input>
            <label>Help Text</label>
              <textarea
              placeholder="Put a help text here (optional) Example from DataOne: Format conventions: use uppercase ,Codes for missing values: unknown"
              class="add_help">
              </textarea>
              <a href="#" rel="tooltip" title="Add new datum field">
                <button class="btn btn-primary add-datum-field" value="Add">Add</button></a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseDatumStateSettingsEE">
        <h4>Datum state settings</h4>
      </a>
    </div>
    <div class="accordion-body collapse" id="collapseDatumStateSettingsEE">
        <ul class="datum_state_settings unstyled"></ul>
        <input class="add_input" value="" placeholder="Add..." type="text"></input>
        <select class="add_color_chooser">
          <option value="success">Green</option>
          <option value="warning">Orange</option>
          <option value="important">Red</option>
          <option value="primary">Blue</option>
          <option value="info">Teal</option>
          <option value="inverse">Black</option>
          <option value="">Default</option>
        </select>
        <a href="#" rel="tooltip" title="Add new datum state">
          <button class="btn btn-primary add-datum-state" value="Add">Add</button></a>
    </div>
  </div>      
</div>

<h3>Comments</h3>
<ul class="comments unstyled"></ul>

<div class="alert alert-info">
  <span>new comment: </span>
  <i class="icons icon-comment"></i>
  <div class= "pull-right">  </div>
  <textarea class="comment-new-text"></textarea>
</div>

<button class="btn btn-primary add-comment-edit" value="Add">Add
  Comment</button>
