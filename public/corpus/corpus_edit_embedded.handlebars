<!-- Corpus Menu - Identical for all Corpus Handlebars -->
<div>
<!-- This div puts the buttons in the left corner -->
  <div class="btn-group btn-toolbar corpusMenu">
    <!-- This div is necessary so that the menu appears below the buttons -->
    <div class="btn-group">
      <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        <span class ="locale_New_menu"></span>  <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li class="new-datum"><a href="#" class = "locale_New_Datum"></a></li>
        <li class="new-data-list"><a href="#" class = "locale_New_Data_List"></a></li>
        <li class="new-session"><a href="#" class = "locale_New_Session"></a></li>
        <li class="new-corpus"><a href="#" class = "locale_New_Corpus"></a></li>
      </ul>
    </div>
    <!-- /btn-group -->
    <div class="btn-group">
      <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
        <span class ="locale_Data_menu"></span> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#import" class = "locale_Import_Data"></a></li>
        <li><a href="#corpus/{{titleAsUrl}}/export" class = "locale_Export_Data"></a></li>
      </ul>
    </div>
    <!-- /btn-group -->
  </div>
  
  <!-- Corpus icons - Different for all Corpus Handlebars -->
  <div class="pull-right">
    <a href="#" class= "locale_Show_Readonly" rel="tooltip">
      <i class="icons icon-book"></i></a>
    <a href="#" class = "locale_Show_in_Dashboard" rel="tooltip">
      <i class="icons icon-resize-small"></i></a>
  </div>
</div>

<label class = "locale_Title"></label>
<input class="corpus-title-input" value="{{title}}" type="text"/>

<label class = locale_Description_Summary_Edit></label>
<textarea class="corpus-description-input">{{description}}</textarea>

<label class = "locale_Public_or_Private"></label>
<input type="text" value="{{publicCorpus}}" class=" public-or-private" data-provide="typeahead" data-items="4" 
        data-source="[&quot;Public&quot;,&quot;Private&quot;]"/>
        
<div class="accordion" id="accordion-edit-embedded">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseSessionsEE">
        <strong class="locale_Sessions_associated"></strong>
         </a>
    </div>
    <div class="accordion-body collapse" id="collapseSessionsEE">
      <div class="accordion-inner">
        <ul class = "sessions-updating-collection unstyled">
                <!-- Updating Sessions Collection -->
        </ul>
      </div>
    </div>
  </div>
  
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseDatalistsEE">
          <strong class="locale_Datalists_associated"></strong>
      </a>
    </div>
    <div class="accordion-body collapse" id="collapseDatalistsEE" >
      <div class="accordion-inner">
         <ul class = "datalists-updating-collection unstyled">
                <!-- Updating DataLists Collection -->
        </ul>
      </div>
    </div>
  </div>
  
  <div class="accordion-group">
    <div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse"
				data-parent="accordion-edit-embedded" href="#collapsePermissionsEE">
				<strong class="locale_Permissions_associated"></strong>
			</a>
		</div>
    <div class="accordion-body collapse" id="collapsePermissionsEE">
      <div class="accordion-inner">
        <ul class = "permissions-updating-collection unstyled">
                      <!-- Updating Permissions Collection -->
        </ul>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseDatumFieldSettingsEE">
           <strong class="locale_Datum_field_settings"></strong>
        </a>
    </div>
    <div class="accordion-body collapse" id="collapseDatumFieldSettingsEE">
      <div class="accordion-inner">
        <ul class="datum_field_settings unstyled"></ul>
        <div class="breadcrumb">
          <span class="pull-right"> 
            <span class="locale_Encrypt_if_confidential"></span>
            <input type="checkbox" class="add_shouldBeEncrypted"{{shouldBeEncrypted}}></input>
          </span> 
          <input type="text" class="span3 choose_add_field"  data-provide="typeahead" data-items="4" data-source="[&quot;Phonemic Transcription&quot;,&quot;Phonetic Transcription&quot;,&quot;Semantic Denotation&quot;,&quot;Semantic Context&quot;,&quot;Spanish&quot;,&quot;Notes&quot;]">
          <label class="locale_Help_Text"></label>
          <textarea class="add_help locale_Help_Text_Placeholder"></textarea>
          <a href="#" class="locale_Add_New_Datum_Field_Tooltip btn btn-primary add-datum-field locale_Add" rel="tooltip">
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-edit-embedded" href="#collapseDatumStateSettingsEE">
        <strong class="locale_Datum_state_settings"></strong>
      </a>
    </div>
    <div class="accordion-body collapse" id="collapseDatumStateSettingsEE">
        <ul class="datum_state_settings unstyled"></ul>
        <input class="add_input locale_Add_Placeholder" value="" type="text"></input>
        <select class="add_color_chooser">
          <option value="success" class = "locale_Green"></option>
          <option value="warning" class = "locale_Orange"></option>
          <option value="important" class = "locale_Red"></option>
          <option value="primary" class = "locale_Blue"></option>
          <option value="info" class = "locale_Teal"></option>
          <option value="inverse" class = "locale_Black"></option>
          <option value="" class = "locale_Default"></option>
        </select>
        <a href="#" class = "locale_Add_New_Datum_State_Tooltip btn btn-primary add_datum_state locale_Add" rel="tooltip">
        </a>
    </div>
  </div>      
</div>
<ul class="comments unstyled"></ul>
<div class="alert alert-info">
  <i class="icons icon-comment"></i>
  <textarea class="comment-new-text"></textarea>
</div>

<button class="btn btn-primary add-comment-edit locale_Add" value="Add"></button>
