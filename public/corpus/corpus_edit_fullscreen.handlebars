
<i class="icons icon-resize-small pull-right"></i>
<i class="icons icon-book pull-right"></i>
 <button class="btn btn-success pull-right save-corpus" value="Save">Save</button>

<div class="corpusMenu">

  <div class="btn-group">
    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      New <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        <li class="new_datum_edit"><a>New Datum</a></li>
        <li><a class="data-list-embedded">New Data List</a></li>
        <li><a class="new_session">New Session</a></li>
        <li><a class="new_corpus">New Corpus</a></li>
    </ul>
  </div>

  <div class="btn-group">
    <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
      Data <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><a class="" href="#import">Import</a></li>
      <li><a class="" href="#corpus/{{titleAsUrl}}/export">Export</a></li>
    </ul>
  </div>
</div>


<label>Title:</label>
<input class="corpus-title-input" value="{{title}}"/>
<label>Description:</label>
<textarea class="corpus-description-input">{{description}}</textarea>

<div class="accordion" id="accordion-edit-fullscreen">
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse"
				data-parent="#accordion-edit-fullscreen" href="#collapseSessionsEF">
				<h4>Sessions associated with this corpus</h4>
				 </a>
		</div>
		<div id="collapseSessionsEF" class="accordion-body collapse">
			<div class="accordion-inner">
				<ul>
				<li>Session 1</li>
				<li>Session 2</li>
				<li>Session 3</li>
				<li>Session 4</li>
				<li>Session 5</li>
				<li>Session 6</li>
				<li>Session 7</li>
				<li>Session 8</li>
				<li>Session 9</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse"
				data-parent="#accordion-edit-fullscreen" href="#collapseDatalistsEF">
				<h4>Datalists associated with this corpus</h4>
				</a>
		</div>
		<div id="collapseDatalistsEF" class="accordion-body collapse">
			<div class="accordion-inner">
				<ul class = "datalists">
				
				</ul>
			</div>
		</div>
	</div>
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse"
				data-parent="#accordion-edit-fullscreen" href="#collapsePermissionsEF">
				<h4>Permissins associated with this corpus</h4>
				</a>
		</div>
		<div id="collapsePermissionsEF" class="accordion-body collapse">
			<div class="accordion-inner">
				<ul>
				<li>Permission 1</li>
				<li>Permission 1</li>
				<li>Permission 1</li>
				<li>Permission 1</li>
				<li>Permission 1</li>
				<li>Permission 1</li>
				<li>Permission 1</li>
				<li>Permission 1</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse"
				data-parent="#accordion-edit-fullscreen" href="#collapseDatumFieldSettingsEF">
				<h4>Datum field settings</h4>
				</a>
		</div>
		<div id="collapseDatumFieldSettingsEF" class="accordion-body collapse">
			<div class="accordion-inner">
				<ul class="datum_field_settings unstyled"></ul>
				<div class="breadcrumb">
				<input type="text" class="span3 choose_add_field" data-provide="typeahead" data-items="4" 
				data-source="[&quot;Phonemic Transcription&quot;,&quot;Phonetic Transcription&quot;,&quot;Semantic Denotation&quot;,&quot;Semantic Context&quot;,&quot;Spanish&quot;,&quot;Notes&quot;]">
				
					<!-- <select class="choose_add_fields">
						<option value="judgement">Gramaticality/Acceptability Judgement</option>
						<option value="utterence">Orthography/Utterance</option>
						<option value="morphemes">Morphemes</option>
						<option value="gloss">Gloss</option>
						<option value="translation">Translation</option>
						<option value="transcription">IPA Transcription</option>
						<option value="context">Context</option>
						<option value="semantic_denotation">Semantic Denotation</option>
						<option value="Create New">Create New</option>
				</select>  -->
				Encrypt if confidential: <input type="checkbox" class="add_encrypted"{{encrypted}}></input>
						<label>Help Text</label>
							<textarea
							placeholder="Put a help text here (optional) Example from DataOne: Format conventions: use uppercase ,Codes for missing values: unknown"
							class="add_help"></textarea>
					<button class="btn btn-primary add_datum_field" value="Add">Add</button>
				</div>
			</div>
		</div>
	</div>
	
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse"
				data-parent="#accordion-edit-fullscreen" href="#collapseDatumStateSettingsEF">
				<h4>Datum state settings</h4>
			</a>
		</div>
		<div class="accordion-body collapse" id="collapseDatumStateSettingsEF">
				<ul class="datum_state_settings unstyled"></ul>
				<input class="add_input" value="" placeholder="Add..."></input>
				<select class="add_color_chooser">
					<option value="success">Green</option>
					<option value="warning">Orange</option>
					<option value="important">Red</option>
					<option value="primary">Blue</option>
					<option value="info">Teal</option>
					<option value="inverse">Black</option>
					<option value="">Default</option>
				</select>
				<button class="btn btn-primary add_datum_state" value="Add">Add</button>
		</div>
	</div>			
</div>

