  <!-- This div aligns the icons and the buttons-->
<div>
	<!-- This div makes a buttons toolbar and puts buttons in the left corner -->
	<div class="btn-group btn-toolbar corpusMenu">
		<!-- This div is necessary so that the menu appears below the buttons -->
		<div class="btn-group">
			<button class="btn btn-primary dropdown-toggle"
				data-toggle="dropdown">
				New <span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li class="new-datum-read"><a href="#">New Datum</a></li>
				<li class="new-data-list"><a href="#">New Data List</a></li>
				<li class="new-session"><a href="#">New Session</a></li>
				<li class="new-corpus"><a href="#">New Corpus</a></li>
			</ul>
		</div>
		<!-- This div is necessary so that the menu appears below the buttons -->
		<div class="btn-group">
			<button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
				Data <span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li><a href="#import">Import Data</a></li>
				<li><a href="#corpus/{{titleAsUrl}}/export">Export Data</a></li>
			</ul>
		</div>
	</div>

	<div class="pull-right">
		<i class="icons icon-edit"></i>
		
		<i class="icons icon-cogs resize-full"></i>
	</div>
</div>

<div class="corpus-description">
	<h3>{{title}} <small>{{publicCorpus}}</small></h3>
	<p>{{description}}</p>
</div>



