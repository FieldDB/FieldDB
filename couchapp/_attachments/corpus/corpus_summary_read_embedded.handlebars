<!-- Corpus icons - Different for all Corpus Handlebars -->
<div class="pull-right">
  <a href="#" class="locale_Edit_corpus" rel="tooltip"> 
    <i class="icons icon-edit"></i></a>
  <a href="#" class = "locale_Show_corpus_settings" rel="tooltip">
    <i class="icons icon-cogs resize-full"></i></a>
</div>
<div class="btn-toolbar ">
  <!-- Corpus Menu - Identical for all Corpus Handlebars -->
  <div class="btn-toolbar">
    <div class="btn-group">
      <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        <span class ="locale_New_menu"></span>  <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li class="new-datum"><a href="#" class = "locale_New_Datum"></a></li>
        <li class="new-conversation"><a href="#corpus/{{pouchname}}/conversation/new" class = "locale_New_Conversation"></a></li>
        <li class="new-data-list"><a href="#" class = "locale_New_Data_List"></a></li>
        <li class="new-session"><a href="#" class = "locale_New_Session"></a></li>
        <li class="new-corpus"><a href="#" class = "locale_New_Corpus"></a></li>
      </ul>
    </div>
    <div class="btn-group">
      <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
        <span class ="locale_Data_menu"></span> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#import" class = "locale_Import_Data"></a></li>
        <li><a href="#corpus/{{pouchname}}/export" class = "locale_Export_Data"></a></li>
        <li><a href="#corpus/{{pouchname}}/alldata" class = "locale_All_Data"></a></li>
        
      </ul>
    </div>
    <!-- /Corpus Menu - Identical for all Corpus Handlebars -->
  </div>
</div>

<div class="corpus-description">
	<h3><i class="icon-cloud"></i> {{title}}<small> {{publicCorpus}}</small></h3>
	<p>
		<!-- <a href = "http://www.lingsync.org/{{username}}/{{titleAsUrl}}" target = "_blank"><i class=" icon-link"></i></a> -->
		{{description}}
	</p>
</div>



