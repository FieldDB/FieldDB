<!-- Corpus icons - Different for all Corpus Handlebars -->
<div class="pull-right">
  <a href="#" class = "locale_Edit_corpus" rel="tooltip">
    <i class="icons icon-edit"></i></a>
  <a href="#" class= "locale_Show_in_Dashboard" rel="tooltip" >
    <i class="icons icon-resize-small"></i></a>
</div>
<div class="btn-toolbar ">
  <!-- Corpus Menu - Identical for all Corpus Handlebars -->
  <div class="btn-toolbar">
    <div class="btn-group">
      <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        <span class ="locale_New_menu"></span>  <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li class="new-datum"><a href="#" class = "locale_New_Datum"></a></li>
        <li class="new-conversation"><a href="#corpus/{{pouchname}}/conversation/new" class = "locale_New_Conversation"></a></li>
        <li class="new-data-list"><a href="#" class = "locale_New_Data_List"></a></li>
        <li class="new-session"><a href="#" class = "locale_New_Session"></a></li>
        <li class="new-corpus"><a href="#" class = "locale_New_Corpus"></a></li>
      </ul>
    </div>
    <div class="btn-group">
      <button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
        <span class ="locale_Data_menu"></span> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#import" class = "locale_Import_Data"></a></li>
        <li><a href="{{exportAllDatumURL}}" target="_blank"  class = "locale_Export_Data"></a></li>
        <li><a href="#corpus/{{pouchname}}/alldata" class = "locale_All_Data"></a></li>
      </ul>
    </div>
    <!-- /Corpus Menu - Identical for all Corpus Handlebars -->
  </div>
</div>

<h2><i class="icon-cloud"></i> {{title}} <small>{{publicCorpus}}</small></h2>
<a href = "http://www.lingsync.org/{{username}}/{{titleAsUrl}}" target = "_blank"><i class=" icon-link"></i></a>
<small>Shareable URL: http://www.lingsync.org/{{username}}/{{titleAsUrl}}</small>
<div class="description">{{description}}</div>

<!-- Force directed graph of morphemes in the corpus -->
<div class="corpus-precedence-rules-visualization" id="corpus-precedence-rules-visualization-fullscreen"></div>

<div class="accordion" id="accordion-read-embedded">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-read-embedded" href="#collapseSessionsRE">
        <i class="icon-calendar"></i> <strong class="locale_Sessions_associated"></strong>
         </a>
    </div>
    <div id="collapseSessionsRE" class="accordion-body collapse">
      <div class="accordion-inner">
				<span class="locale_elicitation_sessions_explanation"></span>
				<ul class = "sessions-updating-collection unstyled">
                <!-- Updating Sessions Collection -->
        </ul>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-read-embedded" href="#collapseDatalistsRE">
          <i class="icon-pushpin"></i> <strong class="locale_Datalists_associated"></strong>
        </a>
    </div>
    <div id="collapseDatalistsRE" class="accordion-body collapse">
      <div class="accordion-inner">
				<span class="locale_datalists_explanation"></span>
        <ul class = "datalists-updating-collection unstyled">
                <!-- Updating DataLists Collection -->
        </ul>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-read-embedded" href="#collapsePermissionsRE">
        <i class="icon-group"></i> <strong class="locale_Permissions_associated"></strong>
        </a>
    </div>
    <div id="collapsePermissionsRE" class="accordion-body collapse">
      <div class="accordion-inner ">
				<span class="locale_permissions_explanation"></span>
        <p>
        <button class="btn btn-inverse reload-corpus-team-permissions"><i class="icon-refresh"></i> See current team members</button>
        </p>
        <ul class = "permissions-updating-collection unstyled">
                      <!-- Updating Permissions Collection -->
        </ul>
      </div>
    </div>
  </div>
  
  <div class="accordion-group">
    <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-read-embedded" href="#collapseDatumFieldSettingsRE">
          <i class="icon-list"></i>  <strong class="locale_Datum_field_settings"></strong>
        </a>
    </div>
    <div id="collapseDatumFieldSettingsRE" class="accordion-body collapse">
      <div class="accordion-inner">
				<span class="locale_datum_fields_explanation"></span>
				<ul class="datum_field_settings unstyled"></ul>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-read-embedded" href="#collapseDatumStateSettingsRE">
        <i class="icon-flag"></i> <strong class="locale_Datum_state_settings"></strong>
        </a>
    </div>
    <div id="collapseDatumStateSettingsRE" class="accordion-body collapse">
      <div class="accordion-inner">
        <span class="locale_datum_states_explanation"></span>
        <ul class="datum_state_settings unstyled"></ul>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse"
        data-parent="#accordion-read-embedded" href="#collapseLessonsSettingsRE">
        <i class="icon-gift"></i> <strong class="">New! Add Language Lessons components to this corpus</strong>
        </a>
    </div>
    <div id="collapseLessonsSettingsRE" class="accordion-body collapse">
      <div class="accordion-inner">
        <a href="https://corpusdev.lingsync.org/public-firstcorpus/_design/pages/lessons_corpus/index.html" target="_blank">See prototype</a>        

      </div>
    </div>
  </div>
</div> 

