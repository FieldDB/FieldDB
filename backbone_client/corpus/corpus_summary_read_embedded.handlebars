<!-- Corpus icons - Different for all Corpus Handlebars -->
<div class="pull-right">
	<a href="#"   title="{{locale_Edit_corpus}}" rel="tooltip"> <i
		class="icons icon-edit"></i></a> <a href="#"
		  title="{{locale_Show_corpus_settings}}" rel="tooltip"> <i
		class="icons icon-cogs resize-full"></i></a>
</div>
<div class="btn-toolbar ">
	<!-- Corpus Menu - Identical for all Corpus Handlebars -->
	<div class="btn-toolbar">
		<div class="btn-group">
			<button class="btn btn-primary dropdown-toggle"
				data-toggle="dropdown">
				<span>{{locale_New_menu}}</span> <span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li class="new-datum"><a href="#"  >{{locale_New_Datum}}</a></li>
				<li class="new-data-list"><a href="#"
					 >{{locale_New_Data_List}}</a></li>
				<li class="new-session"><a href="#"  >{{locale_New_Session}}</a></li>
				<li class="new-corpus"><a href="#"  >{{locale_New_Corpus}}</a></li>
			</ul>
		</div>
		<div class="btn-group">
			<button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
				<span>{{locale_Data_menu}}</span> <span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li><a href="#import"  >{{locale_Import_Data}}</a></li>
				<li><a href="{{exportAllDatumURL}}" target="_blank">{{locale_Export_Data}}</a></li>
		        <li><a href="{{exportWordListURL}}" target="_blank">Word List</a></li>
		        <li><a href="#corpus/{{dbname}}/alldata">{{locale_All_Data}}</a></li>
			</ul>
		</div>
		<!-- /Corpus Menu - Identical for all Corpus Handlebars -->
	</div>
</div>

<div class="corpus-description">
	<h4>
		<i class="icon-cloud"></i> {{title}}<small> {{publicCorpus}}</small>
	</h4>
	<p>
		<!-- <a href = "http://lingsync.org/{{username}}/{{titleAsUrl}}" target = "_blank"><i class=" icon-link"></i></a> -->
		{{description}}
	</p>
</div>



