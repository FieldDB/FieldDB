<!-- Corpus icons - Different for all Corpus Handlebars -->
<div class="pull-right">
	<a href="#" title="{{locale_Show_Readonly}}" rel="tooltip"> <i
		class="icons icon-book"></i></a> <a href="#"
		title="{{locale_Show_in_Dashboard}}" rel="tooltip"> <i
		class="icons icon-resize-small"></i></a>
</div>
<div class="btn-toolbar ">
	<!-- Corpus Menu - Identical for all Corpus Handlebars -->
	<div class="btn-toolbar">
		<div class="btn-group">
			<button class="btn btn-primary dropdown-toggle"
				data-toggle="dropdown">
				<span>{{locale_New_menu}}</span> <span class="caret"></span>
			</button>
			<!-- create new stuff in same dashboard -->
			<ul class="dropdown-menu">
				<li class="new-datum"><a href="#"  ><i class='icon-list'> {{locale_New_Datum}}</i></a></li>
				<li class="new-data-list"><a href="#"
					 ><i class='icon-pushpin'> {{locale_New_Data_List}}</i></a></li>
				<li class="new-session"><a href="#"  ><i class='icon-calendar'> {{locale_New_Session}}</i></a></li>
				<li class="new-corpus"><a href="#"  ><i class='icon-cloud'> {{locale_New_Corpus}}</i></a></li>
			</ul>
		</div>
		<div class="btn-group">
			<button class="btn btn-info dropdown-toggle" data-toggle="dropdown">
				<span>{{locale_Data_menu}}</span> <span class="caret"></span>
			</button>
			<!-- modify URL -->
			<ul class="dropdown-menu">
				<li><a href="#import"  >{{locale_Import_Data}}</a></li>
				<li><a href="{{exportAllDatumURL}}" target="_blank"
					 >{{locale_Export_Data}}</a></li>
				<li><a href="#corpus/{{pouchname}}/alldata"
					 >{{locale_All_Data}}</a></li>
			</ul>
		</div>
		<!-- /Corpus Menu - Identical for all Corpus Handlebars -->
		<!-- Corpus Save and Toggle to Readonly - Edit View Only-->

			<button class="btn btn-success save-corpus">
				<span>{{locale_Save}}</span></button>
		<!-- Issue #797 -->
      <button class="btn btn-danger trash-button">
       <i class="icon-trash "></i> </button>	
	</div>
</div>



