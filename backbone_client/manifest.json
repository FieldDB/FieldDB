

{
  "name": "LingSync Prototype",
  "description": "A Free Tool for Creating and Maintaining a Shared Database For Communities, Linguists and Language Learners",
  "version": "1.90.2",
  "manifest_version": 2,
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]

    }
  },

  "icons": {
    "16": "images/icon16_dev.png",
    "48": "images/icon48_dev.png",
    "128": "images/icon128_dev.png"
  },

  "sandbox": {
    "pages": ["sorry.html"
    ]

  },

  "permissions": [
    "https://*/*",
    "webview",
    "unlimitedStorage", {
      "socket": [
        "tcp-connect",
        "udp-send-to",
        "udp-bind"
      ]
    }
  ]
}
